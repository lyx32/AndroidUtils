<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/video_audio_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FF7937"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:text="温馨提示"
        android:textColor="#e4e4e4"
        android:textSize="19sp" >
    </TextView>

    <TextView
        android:id="@+id/video_audio_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="温馨提示：由于远大视频库还在建设中，视频播放暂时跳转到第三方播放，跳转后如需返回，请按手机返回键"
        android:textColor="#626364" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/video_audio_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="#61C0FF"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/video_audio_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:text="取消"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>