<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12dp">

    <TextView
        android:id="@+id/ui_main_item_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#abc123"
        android:gravity="center"
        android:textColor="@color/text_text"
        android:textSize="@dimen/text_middle" />

    <com.arraylist7.android.utils.widget.CircleImageView
        android:id="@+id/ui_main_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:border_width="3dp"
        app:border_color="#cf0000"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/ui_main_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:layout_toLeftOf="@id/ui_main_item_img"
        android:layout_toRightOf="@id/ui_main_item_id"
        android:textColor="@color/text_text"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/ui_main_item_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ui_main_item_id"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_marginRight="@dimen/_12dp"
        android:layout_toLeftOf="@id/ui_main_item_img"
        android:layout_toRightOf="@id/ui_main_item_id"
        android:textColor="@color/text_text"
        android:textSize="@dimen/text_small" />
</RelativeLayout>