<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.Main">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ui_main_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:padding="@dimen/_7dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_middle" />


            <Button
                android:id="@+id/ui_database_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:text="查询修改查询"
                android:typeface="normal" />

            <Button
                android:id="@+id/ui_database_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:text="查询修改2查询"
                android:typeface="normal" />


            <Button
                android:id="@+id/ui_database_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:text="删除" />

            <Button
                android:id="@+id/ui_database_button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:text="查询指定列" />

            <Button
                android:id="@+id/ui_database_button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:text="drop table " />
            <Button
                android:id="@+id/ui_database_button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginRight="@dimen/_12dp"
                android:text="性能测试" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
